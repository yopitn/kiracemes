  <script>
    const BASE_API = "<%- blog.homepageUrl %>/api/admin";
  </script>

  <% if (view.isHomepage) { %>
  <script>
    (function() {
      const sidebar_link = document.querySelectorAll(".sidebar__inner .link");

      sidebar_link.forEach(link => {
        if (link.baseURI === link.href) {
          link.classList.add("active")
        }
      })
    })();
  </script>
  <% } %>

  <% if (view.isPosts) { %>
  <script src="<%- blog.homepageUrl %>/admin/js/posts.js"></script>
  <% } %>

  <% if (view.isEditor) { %>
  <script src="<%- blog.homepageUrl %>/admin/js/editor.js"></script>
  <% } %>

  <% if (view.isPostCreate) { %>
  <script src="<%- blog.homepageUrl %>/admin/js/create-post.js"></script>
  <% } %>

  <% if (view.isPostUpdate) { %>
  <script src="<%- blog.homepageUrl %>/admin/js/update-post.js"></script>
  <% } %>

  </body>

  </html>